{
    "name": "lucas/wordpress-site",
    "description": "My WordPress site managed with Composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/lucas-project/songs-plugin.git"
        },
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^2.0",
        "lucas-project/songs-plugin": "1.0.4",
        "wpackagist-plugin/advanced-custom-fields": "^6.4"
    },
    "extra": {
        "installer-paths": {
            "wp-content/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "wp-content/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
